<% layout("/layouts/boilerplate.ejs") %>
<body>
    <h2>Edit this Listing</h2>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST">

        <label for="title">Title: </label>
        <input id="title" type="text" name="listing[title]" value="<%= listing.title %>">
        <br><br>
        <label for="description">Description: </label>
        <br>
        <textarea id="description" type="text" name="listing[description]" rows="5" cols="50"><%= listing.description %></textarea>
        <br><br>
        <label for="url">URL: </label>
        <input id="url" type="text" name="listing[image][url]" value="<%= listing.image.url %>">
        <br><br>
        <label for="price">Price: </label>
        <input id="price" type="number" name="listing[price]" value="<%= listing.price %>">
        <br><br>
        <label for="country">Country: </label>
        <input id="country" type="text" name="listing[country]" value="<%= listing.country %>">
        <br><br>
        <label for="location">Location: </label>
        <input id="location" type="text" name="listing[location]" value="<%= listing.location %>">
        <br><br>

        <button>Done</button>
    </form>
</body>